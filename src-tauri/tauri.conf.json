{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },

  "package": {
    "productName": "Flowplane",
    "version": "0.1.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      }
    },

    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.flowplane.release",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/shhivv/a23112b8b799779aa56a1f06883dc533/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzQjFGMEYwODEwN0IzQzgKUldUSXN3ZUI4UEN4STZzTHBnUXczVExjTklCNU5EWFJBVTFmTVk1Z3ZNa0laRWRIRGpGa1pHZTUK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "maximized": true,
        "resizable": true,
        "title": "Flowplane",
        "label": "main",
        "visible": false,
        "decorations": false
      },
      {
        "hiddenTitle": true,
        "decorations": false,
        "visible": false,
        "label": "portal",
        "title": "Portal",
        "center": true,
        "transparent": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/128x128.png",
      "iconAsTemplate": true
    }
  }
}
